{
  "manifest_version": 3,
  "name": "Gemini Canvas Publisher",
  "version": "1.0.0",
  "description": "Publish Gemini Canvas code to shareable URLs",
  "permissions": ["storage", "activeTab", "alarms"],
  "host_permissions": ["https://gemini.google.com/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "gemini-canvas-publisher@devosurf.dev",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Gemini Canvas Publisher"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ]
}
